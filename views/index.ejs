<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
	<head>
	    <title>Flapper news!</title>
	    <script src="/javascripts/frontend.js"></script>
	    <script src="/javascripts/angular.min.js"></script>
	    <script src="/javascripts/angularApp.js"></script>
	    <link href="/stylesheets/frontend.css" rel="stylesheet">
	</head>
	<body ng-app="flapperNews" ng-controller="MainCtrl">
		<div class="container">
			<div class="page-header">
        		<h1>Flapper News</h1>
      		</div>
			<div class="row">
				<div class="col-md-6">
				    <div ng-repeat="post in posts | orderBy: '-upvotes'">
				    	<div class="well">
					    	<span ng-show="post.link"><a href="{{post.link}}">{{post.title}}</a></span>
					  		<span ng-hide="post.link">{{post.title}}</span>
					  		- <span ng-click="incrementUpvotes(post)"> <i class="fa fa-thumbs-up"></i> {{post.upvotes}} </span>
					  	</div>
					</div>
					<form ng-submit="addPost()" style="margin-top:30px;">
    					<h3>Add a new post</h3>
    					<div class="form-group">
				  			<input type="text" ng-model="title" class="form-control" placeholder="Post title" />
				  		</div>
				  		<div class="form-group">
				  			<input type="text" ng-model="link" class="form-control" placeholder="Post link" /><br />
				  		</div>
				  		<button class="btn btn-success" type="submit">Post</button>
					</form>	
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
